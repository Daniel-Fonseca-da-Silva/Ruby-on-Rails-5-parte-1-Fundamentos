<table class="table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Descrição</td>
            <td>Preço</td>
            <td>Quantidade</td>
            <td colspan="1"></td>
        </tr>
    </thead>
    <tbody>
        <% @produtos.each do |produto|  %>
            <tr>
                <td><%= produto.nome %></td>
                <td><%= produto.descricao %></td>
                <td><%= produto.preco %></td>
                <td><%= produto.quantidade %></td>
                <td><%= link_to "Remover", produto, method: :delete  %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Produtos com desconto</h4>
</div>
